--langdef=markdown
--langmap=markdown:.md
--regex-markdown=/^#[ \t]+(.*)/\1/h,Heading_L1/
--regex-markdown=/^##[ \t]+(.*)/\1/i,Heading_L2/
--regex-markdown=/^###[ \t]+(.*)/\1/k,Heading_L3/
--langdef=txt 
--langmap=txt:.txt
--regex-txt=/^([0-9]+\.?[ \t]+)(.+$)/\1\2/c,content/
--regex-txt=/^(([0-9]+\.){1}([0-9]+\.?)[ \t]+)(.+$)/.   \1\4/c,content/
--regex-txt=/^(([0-9]+\.){2}([0-9]+\.?)[ \t]+)(.+$)/.       \1\4/c,content/
--regex-txt=/^[ \t]+(table[ \t]+[0-9a-zA-Z]+([.: ]([ \t]*.+)?)?$)/\1/t,tables/i
--regex-txt=/^[ \t]+(figure[ \t]+[0-9a-zA-Z]+([.: ]([ \t]*.+)?)?$)/\1/f,figures/i
--langdef=autohotkey
--langmap=autohotkey:.ahk
--regex-autohotkey=/^[ \t]*([a-zA-Z0-9_]+)\:\s*$/\1/l,Label/
--regex-autohotkey=/^[ \t]*([a-zA-Z0-9_]+)[ |\t]*:?=/\1/v,Variable/
--regex-autohotkey=/^[ \t;]*(NOTE|note|Note)[ \t]*\:[ \t]*(.*)/\2/n,Note/
--regex-autohotkey=/^[ \t;]*(TODO|todo|Todo)[ \t]*\:[ \t]*(.*)/\2/t,Todo/
--regex-autohotkey=/^[ \t]*^([a-zA-Z0-9_@]{3,})[ \t]*\(.*\)[ \t]*\{/\1/f,function/
--regex-autohotkey=/^[[:blank:]]*([^:;].{0,24}::)/\1/k,Hotkey,AutoHotkey Hotkeys/
--regex-autohotkey=/^[[:blank:]]*(:[^:]*:[[:print:]]+::)/\1/s,Hot_String,AutoHotkey HotStrings/
